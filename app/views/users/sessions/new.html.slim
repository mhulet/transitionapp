= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
  = f.error_notification
  = f.input :email, required: false, autofocus: true, label: 'Email', placeholder: 'Adresse email'
  = f.input :password, required: false, label: 'Mot de passe', placeholder: 'Mot de passe'
  = f.input :remember_me, as: :boolean, wrapper: :checkbox, label: 'se souvenir de moi' if devise_mapping.rememberable?
  = f.button :submit, 'Me connecter'

= render 'users/shared/links'
